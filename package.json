{
  "name": "action-mypy-fancy",
  "version": "0.0.0",
  "description": "GitHub action that runs mypy and adds annotations to the code",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --license licenses.txt",
    "test": "jest --coverage",
    "check-all": "npm run format-check && npm run lint && npm run build && npm test",
    "all": "npm ci && npm run format && npm run lint && npm run build && npm test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rethab/action-mypy-fancy.git"
  },
  "keywords": [
    "actions",
    "mypy"
  ],
  "author": "Reto ",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.5.0",
    "retext": "^8.1.0",
    "retext-google-styleguide": "^1.0.0",
    "to-vfile": "^7.2.2",
    "vfile-reporter": "^7.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.8",
    "@typescript-eslint/parser": "^4.30.0",
    "@vercel/ncc": "^0.30.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.2.0",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
